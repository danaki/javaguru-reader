<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="100" author="jhipster">
	    <createTable tableName="T_FEED">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="url" type="varchar(255)"/>
            <column name="entries_updated_at" type="date">
                <constraints nullable="true"/>
            </column>
        </createTable>

	    <createTable tableName="T_ENTRY">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="feed_id" type="int"/>
            <column name="url" type="varchar(255)"/>
            <column name="title" type="varchar(255)"/>
            <column name="created_at" type="date"/>
        </createTable>

		<addForeignKeyConstraint constraintName="fk_entry_feed"
			baseTableName="T_ENTRY" baseColumnNames="feed_id" referencedTableName="T_FEED"
			referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>
